{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2020",
        //"module": "commonjs",
        "module": "es2020",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
      },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
  }